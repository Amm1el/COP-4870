<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MedicalChartingApp.Views.PatientsPage"
    Title="Patients">

  <VerticalStackLayout Padding="16" Spacing="12">
    <Button Text="Add Patient" Command="{Binding AddCommand}" />

    <CollectionView ItemsSource="{Binding Patients}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Grid ColumnDefinitions="*,Auto" Padding="6">
            <Label Text="{Binding Name}" />

            <HorizontalStackLayout Grid.Column="1" Spacing="8">
              <Button Text="Edit"
                      Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.GoToDetailCommand}"
                      CommandParameter="{Binding Id}" />
              <Button Text="Delete"
                      Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                      CommandParameter="{Binding Id}" />
            </HorizontalStackLayout>
          </Grid>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </VerticalStackLayout>
</ContentPage>
