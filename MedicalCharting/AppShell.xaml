<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MedicalChartingApp.Views"
    x:Class="MedicalChartingApp.AppShell"
    Shell.FlyoutBehavior="Disabled">

  <!-- Tab navigation (required AppShell navigation) -->
  <TabBar>
    <Tab Title="Patients">
      <ShellContent Route="patients" ContentTemplate="{DataTemplate views:PatientsPage}" />
    </Tab>
    <Tab Title="Physicians">
      <ShellContent Route="physicians" ContentTemplate="{DataTemplate views:PhysiciansPage}" />
    </Tab>
    <Tab Title="Appointments">
      <ShellContent Route="appointments" ContentTemplate="{DataTemplate views:AppointmentsPage}" />
    </Tab>
  </TabBar>

  <!-- Detail route (patients CRUD: update) -->
  <ShellContent Route="patientdetail" ContentTemplate="{DataTemplate views:PatientDetailPage}" />
</Shell>
