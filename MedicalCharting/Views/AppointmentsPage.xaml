<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="MedicalChartingMaui.Views.AppointmentsPage"
             Title="Appointments">
    <ScrollView>
    <VerticalStackLayout Padding="16" Spacing="10">

        <!-- Create new appointment -->
        <Label Text="New Appointment" FontAttributes="Bold" />
        <Picker Title="Patient"
                ItemsSource="{Binding Patients}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectedPatient}">
        </Picker>
        <Picker Title="Physician"
                ItemsSource="{Binding Physicians}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectedPhysician}">
        </Picker>
        <Entry Placeholder="Start (MM/dd/yyyy HH:mm)" x:Name="StartEntry" />
        <Entry Placeholder="Length minutes (e.g., 30)" x:Name="LengthEntry" />

        <Button Text="Add Appointment" Clicked="OnAddClicked"/>

        <Label Text="Existing Appointments" FontAttributes="Bold" Margin="0,12,0,0"/>
        <CollectionView ItemsSource="{Binding Appointments}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto" Padding="6">
                        <Label>
                          <Label.Text>
                            <!-- Simple display -->
                            <MultiBinding StringFormat="{}{0:MM/dd/yyyy HH:mm} ({1}m)">
                                <Binding Path="Start"/>
                                <Binding Path="Length.TotalMinutes"/>
                            </MultiBinding>
                          </Label.Text>
                        </Label>
                        <Button Grid.Column="1" Text="Delete"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                CommandParameter="{Binding Id}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
